{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["es2015", "es2017", "dom"],
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": "src",
        "allowJs": true,
        "rootDir": "src",
        "outDir": "lib",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": false,
        "skipLibCheck": true,
        "paths": {
            "*": ["*", "src/*"]
        }
        // "esModuleInterop": true
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/**/*.test.tsx", "src/**/*examples.tsx"]
}
